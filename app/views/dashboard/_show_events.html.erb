<ul id = "tiles">
	<% @events.each do |event| 
			r = Random.new
			my_class = "height_" + r.rand(1..3).to_s
	%>
		<li style= "background-color: #F2F2F2 !important; margin-top: 40px !important;">
			<% unless event.event_images.blank? %>
				<%= link_to (image_tag event.event_images.first.image.url, :width => '200px',
				 :class => my_class), event_path(event) %><br/>
				Title:<%= event.title %><br/>
				<div class = "line"></div>
				Name:<%= event.user.name %><br/>
				<div class = "line"></div>
				<% if current_user.favourite_events.include?(event) %>
					<%= button_to "favourite",event_favourites_path(event.id), :method => :post, :remote => true %>
				<% end %>
			<% end %>
		</li>
	<% end %>
</ul>

