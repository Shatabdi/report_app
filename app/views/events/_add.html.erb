<% r = Random.new
	my_class = "height_" + r.rand(1..3).to_s %>
<div class = "each_event <%= my_class%>" style = "">
	<%= link_to (image_tag event.event_images.first.image.url, :width => '100%',
		 :class => my_class), event_path(event) %>
	<%= @event.title %>
	<%= @event.user.name %>
	<% if current_user.favourite_events.include?(@event) %>
		<%= button_to "favourite",event_favourites_path(@event.id), :method => :post, 
			:remote => true %>
	<% end %>
</div>
	
